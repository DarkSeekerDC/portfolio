---
import { colors, levels, skills } from "@/lib/data/skills";
import SkillIndicator from "./SkillIndicator.astro";
import Badge from "./react/Badge";
---

<div class="flex w-full max-w-6xl flex-col items-center justify-center gap-6">
  <header class="flex flex-col gap-3 sm:flex-row">
    <h3 class="text-center text-xl font-bold sm:text-left">Skills</h3>
    <div class="flex gap-3">
      {levels.map((level) => <SkillIndicator class={level.color}>{level.description}</SkillIndicator>)}
    </div>
  </header>
  <div
    class="grid auto-cols-max grid-flow-col grid-cols-2 grid-rows-8 gap-x-3 gap-y-4 md:grid-cols-4 md:grid-rows-4 xl:grid-cols-8 xl:grid-rows-2"
  >
    {
      skills.map((skill) => (
        <Badge className={`${colors[skill.level]} dark:${colors[skill.level]}`}>
          <skill.icon />
          {skill.name}
        </Badge>
      ))
    }
  </div>
</div>
